<!-- 个人认证第一步---信息填写 -->
<!--pages/verify/person/info.wxml-->

<view class="main">
  <view class="input">
    <view class="title">姓名</view>
    <input bindinput='getName' value="{{ username }}" focus label="姓名" placeholder="请输入您的真实姓名" bind:click-icon="onClickIcon"></input>
  </view>
  <view class="input">
    <view class="title">身份证号</view>
    <input bindinput='getIdentity' value="{{ identity }}" label="身份证号" placeholder="请输入您的身份证号" type='idcard'></input>
  </view>
  <view style='text-align:center;'>
    <button bindtap='next' plain class="submit">下一步</button>
  </view>
</view>