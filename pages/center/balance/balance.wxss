.submit {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 40px;
  line-height: 40px;
  border-radius: 0;
  box-sizing: none;
  color: #fff !important;
  background: #fd9827 !important;
  border: 1px solid #fd9827 !important;
  margin: 0;
}
