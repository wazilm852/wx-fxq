page{
  background: #f4f4f4;
}
#detail {
  padding: 10px;
  overflow-y: scroll;
  position: absolute;
  top: 0;
  bottom: 40px;
  left: 0;
  right: 0;
}

.contract-detail {
  display: flex;
  padding:15pt;
  background: #fff;
  margin-bottom:10pt;
  position: relative;
}

.contractimg {
  border:1px solid #eaeaea;
  width: 70pt;
  height: 90pt;
}

.detail {
  display: flex;
  padding-left: 10px;
  width: 150px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  position: relative;
  flex-direction: column;
}

.title {
  font-size: 1rem;
  width: 150px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.word {
  margin: 3px 0;
  color: #999;
  font-size: 0.8rem;
  width: 150px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.action {
  position: absolute;
  border:none;
  bottom: 15px;
  right: 15px;
  z-index: 9999;
  background: transparent;
  color: #fd9827;
  font-size: 14px;
}

.signer-title {
  font-size: 0.75rem;
}

.signer {
  display: flex;
  flex-direction: column;
  height: 65pt;
  background: #fff;
  padding: 15px;
  margin:5pt auto;
  border-bottom: 1px solid #eaeaea;
}
.person-info{
  display: flex;
}
.avatar image {
  width: 40px;
  margin-top: 15px;
  height: 40px;
  border-radius: 100%;
  overflow: hidden;
}

.signer-detail {
  display: flex;
  padding: 0 0 0 10px;
  margin-top: 15px;
  width: 80%;
  flex-direction: column;
}

.name {
  font-size: 14px;
  color: #333;
}

.time {
  font-size: 12px;
  color: #999;
}
.persontype,.success,.fail,.ing{
  display: inline-block;
  width:48px;
  height:18px;
  border-radius: 9px;
  font-size:8pt;
  text-align: center;
  line-height: 18px;
  margin-right:8pt;
  color:#fff;
}

.persontype,.success{
  background: #fd9827;
}
.ing {
  background: #24944b;
}
.fail{
  background: #ccc;
}

.btn {
  width: 100%;
  height: 40px;
  line-height: 40px;
  position: absolute;
  color: #fff !important;
  bottom: 0;
  margin: 0px;
  border: none !important;
  border-radius: 0;
}

.unclick {
  background: #fd9827 !important;
}

.clicked {
  background: #ccc !important;
}
