/* pages/draw/draw.wxss */

.draw{
  height: 100%;
  overflow: hidden;
}

.canvas{
  width:100%;
  height:100%;
  /* transform: rotate(90deg) */
}

.tip{
  position: absolute;
  top:10px;
  width:100%;
  font-size:14px;
  text-align: center;
  color:#666;
}

.btn{
  position: absolute;
  bottom: 0;
  border-radius:2px;
  width:80px;
  height:44px;
  text-align: center;
  line-height:44px;
  font-size: 14px;
  border:1px solid;
  margin:0;
  background: #fff;
  transform: rotate(90deg)
}

.clean{
  position: absolute;
  bottom:140px;
  color:#666;
  border-color:#666;

}
.sure{
  position: absolute;
  bottom:40px;
  color:#fd9827;
  border-color:#fd9827;
}
.btn image{
  width: 20px;
  height: 20px;
}
